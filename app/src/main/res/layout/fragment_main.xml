<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itesm.mx.helppet.MainFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/portada1"
        android:layout_above="@+id/adopta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:onClick="irAdopta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adopta"
        android:src="@drawable/adopta"
        android:layout_marginBottom="154dp"
        android:background="#00ffffff"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:onClick="irAprende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aprende"
        android:src="@drawable/aprende"
        android:background="#00ffffff"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageButton
        android:onClick="irConocelos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conocelos"
        android:src="@drawable/conocelos"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/adopta"
        android:layout_alignStart="@+id/adopta" />

    <ImageButton
        android:onClick="irIdentifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/identifica"
        android:src="@drawable/identifica"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/conocelos"
        android:layout_alignLeft="@+id/aprende"
        android:layout_alignStart="@+id/aprende"
        android:layout_gravity="left|bottom" />


</RelativeLayout>
